{
    "name": "distantnative/retour-for-kirby",
    "type": "kirby-plugin",
    "description": "Redirects and error tracking for Kirby",
    "keywords": [
        "kirby3",
        "kirby3-cms",
        "kirby3-plugin",
        "redirects",
        "routing"
    ],
    "version": "4.0.0-beta.1",
    "license": "MIT",
    "authors": [
        {
            "name": "Nico Hoffmann",
            "email": "on-github@nhoffmann.com"
        }
    ],
    "require": {
        "php": ">=7.3.0 <8.1.0",
        "getkirby/cms": ">=3.5.1 <3.6.0",
        "getkirby/composer-installer": "^1.2"
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "installer-name": "retour",
        "kirby-cms-path": false
    },
    "scripts": {
        "analyze": [
            "@analyze:composer",
            "@analyze:psalm",
            "@analyze:phpmd"
        ],
        "analyze:composer": "composer validate --strict --no-check-version --no-check-all",
        "analyze:phpmd": "phpmd . ansi phpmd.xml.dist --exclude 'tests/*,vendor/*'",
        "analyze:psalm": "psalm",
        "ci": [
            "@fix",
            "@analyze",
            "@test"
        ],
        "fix": "php-cs-fixer fix --config .php_cs",
        "test": "XDEBUG_MODE=coverage phpunit --stderr --coverage-html=tests/coverage"
    }
}
